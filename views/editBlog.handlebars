{{!-- Set the layout for this view --}}
{{#extend "layouts/main"}}

{{!-- Specify the content to be inserted into the layout --}}
{{#content "content"}}
  <div class="container">
    <h1>Edit Blog Post</h1>
    <form action="/blog/edit/{{blogPost.id}}" method="POST">
      <div class="form-group">
        <label for="title">Title:</label>
        <input type="text" id="title" name="title" value="{{blogPost.title}}" required>
      </div>
      <div class="form-group">
        <label for="content">Content:</label>
        <textarea id="content" name="content" rows="6" required>{{blogPost.content}}</textarea>
      </div>
      <button type="submit">Save Changes</button>
    </form>
  </div>
{{/content}}
